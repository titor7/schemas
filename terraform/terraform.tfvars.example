# Example Terraform variables file
# Copy this file to terraform.tfvars and customize as needed

# Azure configuration
resource_group_name = "rg-elbe-infrastructure"
location           = "West Europe"

# Network configuration
vnet_name                     = "vnet-elbe"
vnet_address_space            = ["179.105.0.0/16"]
subnet_elbe_address_prefix    = "179.105.12.96/27"
subnet_admin_address_prefix   = "179.105.13.0/24"

# Domain configuration
domain_name = "elbe.its.dnsi"

# VM configuration
admin_username = "azureuser"
# admin_password should be set via environment variable TF_VAR_admin_password

# VM sizes
vm_size_dc       = "Standard_DS2_v2"
vm_size_standard = "Standard_DS1_v2"
vm_size_rds      = "Standard_DS3_v2"

# Tags
tags = {
  Environment = "Production"
  Project     = "ELBE-Infrastructure"
  Owner       = "IT-Administration"
  CostCenter  = "IT-001"
  Criticality = "High"
}